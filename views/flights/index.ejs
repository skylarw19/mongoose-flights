<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <title>Flights</title>
</head>
<body>
    <h1>Flight List</h1>
    <table>
        <thead>
            <tr>
                <th>Airline</th>
                <th>Flight Number</th>
                <th>Departure Date/Time</th>
            </tr>
        </thead>
        <tbody>
            <% movies.forEach(function(movie){ %>
                <tr>
                    <td><%=movie.title%></td>
                    <td><%=movie.releaseYear%></td>
                    <td><%=movie.mpaaRating%></td>
                    <td><%=movie.cast.join(', ')%></td>
                    <td><%=movie.nowShowing ? 'Yes' : 'No'%></td>
                </tr>
            <% }) %>
          <!-- Iterate over movies array and write a 
          table row (<tr>) for each with 
          cols (<td>) that match the above headings (<th>) -->
        </tbody>
    </table>
    
</body>
</html>